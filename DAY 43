#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int a,b,c,d,e,f;
	    cin>>a>>b>>c;
	    d=a+b;
	    e=b+c;
	    f=a+c;
	    if(d>=e&&d>=f){
	        cout<<d<<endl;
	    }
	    else if(e>=d&&e>=f){
	        cout<<e<<endl;
	    }
	    else{
	        cout<<f<<endl;
	    }
	}
	return 0;
}
