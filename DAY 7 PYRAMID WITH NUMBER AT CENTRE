#include<iostream>
using namespace std;
int main()
{
	int r,count=1;
	cout<<"Enter number of rows: ";
	cin>>r;
	for(int i=1;i<=r;i++){
		for(int j=1;j<=r-i;j++)
		cout<<" ";
		for(int k=i;k>=1;k--){
			if(k==1)
			cout<<count++;
			else
			cout<<"*";
		}
		for(int l=2;l<=i;l++)
		{
		cout<<"*";
	}
	cout<<endl;
	}
}
